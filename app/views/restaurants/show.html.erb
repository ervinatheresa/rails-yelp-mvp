<h1> <%= @restaurant.name %> </h1>

<div>
  <ul>
    <li> Address: <%= @restaurant.address %> </li>
    <li> Phone Number: <%= @restaurant.phone_number %> </li>
    <li> Food Category: <%= @restaurant.category %> </li>
  </ul>
</div>

<h4>Reviews</h4>
  <% if @restaurant.reviews.empty? %>
    <p>There are no reviews yet for this restaurant</p>
  <% end %>
  <% @restaurant.reviews.each do |review| %>
    <div style="border: solid 1px gray">
      <p><%= review.content %></p>
    </div>
  <% end %>

<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %>
